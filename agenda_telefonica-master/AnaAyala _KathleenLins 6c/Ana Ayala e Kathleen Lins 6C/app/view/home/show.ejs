<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Agenda telefônica</title>
</head>
<body>

<h2>Lista de contatos<h2>
    <table border="1">
        <thead>
            <tr>
                <td>Nome</td>
                <td>Sobrenome</td>
                <td>Telefone</td>
                <td>Configurações</td>
            </tr>
        </thead>
        <tbody>
        <% data.forEach(function(details) { %>
            <tr>
                <td><%= details.name %></td>
                <td><%= details.surname %></td>
                <td><%= details.cel %></td>
                <td><a href="/edit/<%=details._id%>">Editar</a> - <a href="/delete/<%=details._id%>">Apagar</a></td>
            </tr>
            <% }) %> 
        </tbody>
        <button><a href="/">Voltar</a></button>
</body>
</html>